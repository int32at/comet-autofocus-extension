{
  "manifest_version": 3,
  "name": "Comet Auto-Focus",
  "version": "1.0.0",
  "description": "Automatically focuses the prompt input field when opening a new Perplexity Comet tab",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["comet://newtab/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
